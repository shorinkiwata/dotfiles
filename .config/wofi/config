#隐藏滚动条
hide_scroll=true

#destop run模式，用于启动图形化应用
show=drun

#宽度为屏幕的百分之多少
width=25%

#同时显示的行数
lines=8

#文字智能换行
line_wrap=word

#指定终端仿真器
term=ghostty

#允许特殊标记
allow_markup=true

#纯文本搜索
always_parse_args=false

#设置最高图层
layer=overlay

#显示应用图标
allow_images=true
#图标大小
image_size=30

#排序方式，alphabetical是按照首字母排序
sort_order=alphabetical

#强制使用暗色主题
gtk_dark=true

#搜索框里的提示词
prompt="你吃了吗"

#禁用通用名称，总是以软件名称显示
display_generic=false

#展开键
key_expand=Tab

location=center
monitor=DP-2
